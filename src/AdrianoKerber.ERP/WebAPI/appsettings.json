{
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "Debug" },
      {
        "Name": "File",
        "Args": { "path": "Logs/log.txt" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "ERP_Back-end by @adriano.kerber"
    }
  },
  "ConnectionStrings": {
    "SqlConnection": "server=(localdb)\\MSSQLLocalDB; database=Dapper; Integrated Security=true; Encrypt=false"
  }
}
